@model Garant.Models.EditUserViewModel

@{
    Layout = "_Layout";
}
<div class="container text-center text-gradient mt-5 mb-1">
    <h1>Редактирование</h1>
</div>
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group btn btn-sm btn-primary">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>
